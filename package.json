{
    "name": "mharj-jwt-util",
    "version": "0.2.7",
    "description": "JWT util",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "mocha": "mocha",
        "prepublishOnly": "npm run build",
        "test": "nyc mocha",
        "azure-test": "nyc mocha",
        "lint": "eslint src"
    },
    "mocha": {
        "exit": true,
        "extension": [
            "ts",
            "js"
        ],
        "recursive": true,
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporters": [
            "spec",
            "mocha-junit-reporter"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mharj/mharj-jwt-util.git"
    },
    "keywords": [
        "jwt",
        "jsonwebtoken",
        "openid",
        "util"
    ],
    "author": "mharj",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mharj/mharj-jwt-util/issues"
    },
    "homepage": "https://github.com/mharj/mharj-jwt-util#readme",
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src"
        ],
        "reporter": [
            "text",
            "cobertura"
        ],
        "all": true
    },
    "files": [
        "dist"
    ],
    "devDependencies": {
        "@types/chai": "^4.3.5",
        "@types/chai-as-promised": "^7.1.5",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/mocha": "^10.0.1",
        "@types/node": "^16.18.26",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "dotenv": "^16.0.3",
        "eslint": "^8.40.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-deprecation": "^1.4.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-sonarjs": "^0.19.0",
        "google-auth-library": "^8.8.0",
        "googleapis": "^118.0.0",
        "mocha": "^10.2.0",
        "mocha-junit-reporter": "^2.2.0",
        "nyc": "^15.1.0",
        "prettier": "^2.8.8",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.1",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typed-emitter": "^2.1.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "@avanio/expire-cache": "^0.0.3",
        "@avanio/logger-like": "^0.0.4",
        "cross-fetch": "^3.1.5",
        "jsonwebtoken": "^9.0.0"
    }
}
